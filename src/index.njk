---
page_data:
    og_title: Greyscaled.io
    og_description: Software engineer, open-source contributor, technical writer.
    og_url: https://greyscaled.io
---

{% extends "layouts/index.njk" %}

{% block opengraph %}
<meta property="og:title" content="{{page_data.og_title}}">
<meta property="og:description" content="{{page_data.og_description}}">
<meta property="og:url" content="{{website.url}}">
{% endblock %}

{% block main %}
    <h3 class="summary">
        {{page_data.og_description}}
        <br/>
        I write about #webdev.
    </h3>
    <h2>All posts</h2>
    {% for post in collections.posts %}
        <article class="article-block">
            <header>
                <h3>
                    <a class="link-undecorate" href="{{post.data.page.url}}">{{post.data.title}}</a>
                </h3>
                <p>{{post.data.summary}}</p>
                <div class="meta">
                    <span>{{post.data.page.date | formatDate("MMMM dd, yyyy")}}</span>
                    <span>{{post.data.length}} min read</span>
                    {# <span> #}
                        {# {% for tag in post.data.tags %} #}
                            {# Exclude "posts" tag from being shown #}
                            {# {% if tag !== "posts" %} #}
                                {# <a href="/tags/{{tag}}">#{{tag}}</a> #}
                            {# {% endif %} #}
                        {# {% endfor %} #}
                    {# </span> #}
                </div>
                
            </header>
        </article>
    {% endfor %}
{% endblock %}